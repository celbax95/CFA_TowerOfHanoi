<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/menu_button_darkLightMode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_menu_button_round"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/emoji_sun" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/zorque"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="20dp"
            android:text="@string/menu_text_title"
            android:textColor="?attr/color_title"
            android:textSize="48sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/menu_button_play"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_menu_button_roundmedium"
                android:text="@string/menu_button_play"
                android:textColor="?attr/color_menu_button_text"
                android:textSize="21sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_button_scores"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_menu_button_roundmedium"
                android:text="@string/menu_button_scores"
                android:textColor="?attr/color_menu_button_text"
                android:textSize="17sp"
                android:textStyle="bold" />
            />

        </LinearLayout>

        <ImageButton
            android:id="@+id/menu_button_options"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_menu_button_round"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/emoji_settings" />

    </RelativeLayout>

</LinearLayout>