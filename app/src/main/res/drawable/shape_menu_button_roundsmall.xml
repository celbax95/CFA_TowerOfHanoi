<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/color_menu_button_background_pressed" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_selected="true">
    <shape android:shape="rectangle">
        <solid android:color="?attr/color_menu_button_background" />
        <corners android:radius="5dp" />
        <stroke android:width="1dp" android:color="?attr/color_menu_button_text"/>
    </shape>
</item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/color_menu_button_background"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>